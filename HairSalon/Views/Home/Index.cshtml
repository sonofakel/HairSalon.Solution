@{
  Layout = "_Layout";
}

<div class="jumbotron">
  <h1>Hair Salon</h1>
</div>

<div class="container">
  <form action="/" class="form-group" method="post">
    <label for="stylist-name">Enter a stylist</label>
    <input type="text" class="form-control" name="stylist-name" value="" <input pattern=".{1,}" required title="Minimum 1 character required">

    <button type="submit" name="button" class="btn btn-info">Submit a stylist!</button>
  </form>


  @if(Model!=null)
  {
    @foreach(var stylist in Model)
    {
      <div class="well">
        <h3><a href="/stylist-details/@stylist.GetId()">@stylist.GetName()</a> <span style="font-size:.5em">
      </div>
    }
  }
</div>
